<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>number-game</display-name>
  <servlet>
    <servlet-name>CreateGameController</servlet-name>
    <servlet-class>com.cloverdcs.stp.game.controller.CreateGameController</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.cloverdcs.stp.game.controller.PlayGameController</servlet-name>
    <servlet-class>com.cloverdcs.stp.game.controller.PlayGameController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CreateGameController</servlet-name>
    <url-pattern>/game/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>com.cloverdcs.stp.game.controller.PlayGameController</servlet-name>
    <url-pattern>/game/play</url-pattern>
  </servlet-mapping>
</web-app>
